generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id    Int @id @default(autoincrement())
  name  String
  address  String
  order Order[] 
  orderId Int
}

model Product {
  id    Int @id @default(autoincrement())
  name  String
  quantity Int
  price_per_unit Decimal
  order Order? @relation(fields: [orderId], references: [id])
  orderId Int  
}

model Order {
  id    Int @id @default(autoincrement())
  products Product[]
  order_date DateTime
  customer Customer? @relation(fields: [customerId] , references: [id])
  customerId Int
}